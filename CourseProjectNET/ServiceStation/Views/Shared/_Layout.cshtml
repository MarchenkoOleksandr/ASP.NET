<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("STO", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Паркоместа", "Index", "Places")</li>
                        <li>@Html.ActionLink("Категории", "Index", "Categories")</li>
                        <li>@Html.ActionLink("Услуги", "Index", "Services")</li>
                        <li>@Html.ActionLink("Мастера", "Index", "Workers")</li>
                        <li>@Html.ActionLink("Клиенты", "Index", "Users")</li>
                        <li>@Html.ActionLink("Расписание", "Index", "Schedules")</li>
                    }
                    else if (User.IsInRole("Worker"))
                    {
                        <li>@Html.ActionLink("Паркоместа", "Index", "Places")</li>
                        <li>@Html.ActionLink("Категории", "Index", "Categories")</li>
                        <li>@Html.ActionLink("Услуги", "Index", "Services")</li>
                        <li>@Html.ActionLink("Мастера", "Index", "Home")</li>
                        <li>@Html.ActionLink("Клиенты", "Index", "Users")</li>
                        <li>@Html.ActionLink("Расписание", "Index", "Schedules")</li>
                    }
                    else if (User.IsInRole("User"))
                    {
                        <li>@Html.ActionLink("На главную", "Index", "Home")</li>
                        <li>@Html.ActionLink("Создать заказ", "NewOrder", "Home")</li>
                        <li>@Html.ActionLink("История заказов", "OrderHistory", "Home")</li>
                        <li>@Html.ActionLink("О нас", "About", "Home")</li>
                        <li>@Html.ActionLink("Услуги", "Services", "Home")</li>
                        <li>@Html.ActionLink("Мастера", "Workers", "Home")</li>
                        <li>@Html.ActionLink("Контакты", "Contact", "Home")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("На главную", "Index", "Home")</li>
                        <li>@Html.ActionLink("О нас", "About", "Home")</li>
                        <li>@Html.ActionLink("Услуги", "Services", "Home")</li>
                        <li>@Html.ActionLink("Мастера", "Workers", "Home")</li>
                        <li>@Html.ActionLink("Контакты", "Contact", "Home")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Super STO</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
