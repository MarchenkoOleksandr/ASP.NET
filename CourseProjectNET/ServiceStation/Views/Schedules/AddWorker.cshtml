@model List<SelectListItem>

@{
    ViewBag.Title = "Add Worker";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Worker</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col" class="col-md-1 text-center"> </th>
                <th scope="col">Мастер</th>
            </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>
                    @Html.CheckBoxFor(m => m[i].Selected)
                </td>
                <td>
                    @Html.DisplayFor(m => m[i].Text)
                    @Html.HiddenFor(m => m[i].Value)
                    @Html.HiddenFor(m => m[i].Text)
                </td>
            </tr>
        }
        </tbody>
    </table>
    <br />

    <div class="col-md-12">
        <input type="submit" value="Add worker(s)" class="btn btn-default" />
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
