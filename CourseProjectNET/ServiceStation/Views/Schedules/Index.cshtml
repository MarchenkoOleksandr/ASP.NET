@model IEnumerable<ServiceStation.Models.Schedule>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.TimeFrom)</th>
            <th>@Html.DisplayNameFor(model => model.TimeTo)</th>
            <th>Мастер</th>
            <th></th>
        </tr>
        <tr>
            <td>
                <div>
                    <input type="datetime-local" id="startRange" name="startRange" value=@ViewBag.StartDate />
                </div>
            </td>
            <td>
                <input type="datetime-local" id="finishRange" name="finishRange" value=@ViewBag.EndDate />
            </td>
            <td>
                @Html.DropDownList("WorkerId", null, "Все мастера", htmlAttributes: new { @class = "form-control" })
            </td>
            <td>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Select" class="btn btn-default" />
                    </div>
                </div>
            </td>
        </tr>
    </table>
}
    <br />

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderStatus.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Place.PlaceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderStatus.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Place.PlaceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeTo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <br>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) <br>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) <br>
                    @Html.ActionLink("Set workers", "AddWorker", new { id = item.Id }) <br>
                    @Html.ActionLink("Set services", "Index", "Orders", new { id = item.Id }, null) <br>
                    @Html.ActionLink("Set repair parts", "Index", "RepairParts", new { id = item.Id }, null)
                </td>
            </tr>
        }

    </table>
